[colors]
foreground = ${xrdb:color7:#222}
background= ${xrdb:color0:#222}
blue = ${xrdb:color4:#222}
green = ${xrdb:color2:#222}
cyan = ${xrdb:color6:#222}
red = ${xrdb:color1:#222}
purple = ${xrdb:color5:#222}
yellow = ${xrdb:color11:#222}
gray = ${xrdb:color8:#222}
light_gray = ${xrdb:color7:#222}
light_purple = ${xrdb:color13:#222}

alert = ${xrdb:color1:#222}
hl = ${xrdb:color4}

[global/wm]
wm-restack = bspwm
override-redirect = false

[bar/bar1]
monitor = ${env:MONITOR:}
width = 100%
height = 30
fixed-center = true

modules-left = battery pulseaudio xwindow
modules-center = bspwm
modules-right = cpu memory filesystem network updates date

font-0 = "IBM Plex Mono:style=Regular:pixelsize=9;1"
;For volume icons:
font-1 = "Material Icons:style=Regular:pixelsize=12;2"
;For box characters:
font-2 = "Fira Mono:style=Regular:pixelsize=10;3"

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 2
padding-right = 1
module-margin-right = 1
line-size = 3

tray-position = none


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>
format-unknown = <label-unknown>

format-charging-prefix = "↑ "
format-discharging-prefix = "↓ "
format-full-prefix = "• "
format-unknown-prefix = "• "

label-charging-margin-left = 0
label-discharging-margin-left = 0
label-full-margin-left = 0


[module/cpu]
type = internal/cpu
interval = 6
format = <label>
label = [cpu %percentage%%]

[module/memory]
type = internal/memory
interval = 6
format = <label>
label = [ram %gb_used%]
label-padding-right = 0

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 30
fixed-values = true
format-unmounted = <label-unmounted>
label-unmounted = unmounted
label-mounted = [disc %free%]
label-mounted-padding-right = 1
label-unmounted-padding-right = 1


[module/updates]
type = custom/script
exec = ~/scripts/polybar/updates-pacman-aurhelper.sh
interval = 600


[module/temperature]
type = internal/temperature
interval = 6
hwmon-path = /sys/class/hwmon/hwmon2/temp1_input
warn-temperature = 80
units = false
format = <label>
format-warn = <label-warn>
;label = %temperature-c%°
;label-warn = %temperature-c%°
;label-warn-foreground = ${colors.alert}
label = %temperature-c%°
label-warn = %temperature-c%°
label-warn-foreground = ${colors.alert}
label-padding-right = 0



[module/network]
type = internal/network
interface = wlp3s0
interval = 6

format-connected = <label-connected>
format-disconnected = <label-disconnected>
;label-connected = %ifname% %downspeed:8:8%↓ %upspeed:8:8%↑
label-connected = %ifname%
label-connected-foreground = ${colors.green}
label-disconnected = %ifname% not connected
disconnected-foreground = ${colors.alert}
label-connected-padding-right = 0
label-disconnected-padding-right = 0


[module/pulseaudio]
type = internal/pulseaudio
interval = 5

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

label-volume = %percentage%
label-muted =  %percentage%
label-muted-foreground = ${colors.alert}

bar-volume-width = 20
bar-volume-indicator = ╸
bar-volume-fill = ─
bar-volume-fill-font = 3
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.gray}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

ramp-volume-margin-left = 2
label-muted-margin-left = 2

click-right = pavucontrol


[module/date]
type = internal/date
interval = 5

date = "  %Y %b %d %a"
date-alt = "  %Y-%m-%d %a"
time = "%I:%M %p  "
time-alt = "%H:%M  "

label = %date% - %time%
label-foreground = ${colors.foreground}
label-background = ${colors.background}
label-padding = 0
label-padding-left = 0


[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
format-padding = 0
label-foreground = ${colors.foreground}
label-padding-left = 2


[module/bspwm]
type = internal/bspwm

enable-click = true

; ws-icon-[0-9]+ = <label>;<icon>
; Note that the <label> needs to correspond with the bspwm workspace name
; Neither <label> nor <icon> can contain a semicolon (;)
ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 0;0
ws-icon-default = +

label-focused = %icon%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.hl}
label-focused-padding = 1

label-occupied = %icon%
label-occupied-underline = ${colors.hl}
label-occupied-padding = 1

label-empty = %icon%
label-empty-padding = 1
label-empty-foreground = ${colors.light_gray}

label-urgent = %icon%
label-urgent-foreground = ${colors.foreground}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
