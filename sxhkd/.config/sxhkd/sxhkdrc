# open a new terminal
super + Return
    urxvt -e tmux

# open rofi
super + space
    rofi -combi-modi window,drun,run -show combi -modi combi

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# take screenshots with maim
Print
  maim ~/media/pics/shots/$(date +%m-%d-%y_%H%M-%S).png & screenshot_not.sh
control + shift + 4
  maim ~/media/pics/shots/$(date +%m-%d-%y_%H%M-%S).png & screenshot_not.sh

# decrease/increase transparency
control + super + alt + k
  picom-trans -c -5

control + super + alt + j
  picom-trans -c +5
