# show keybindings help
super + F1
    urxvt -geometry 100x30 -name urxvt_keys_help -e ~/.config/sxhkd/show_help.sh

# open a new terminal
super + Return
    urxvt -e tmux

# open a terminal with tmate (for shared sessions)
super + alt + Return
  urxvt -e tmate

# open rofi
super + space
    rofi -combi-modi window,drun,run -show combi -modi combi

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# take screenshots with maim
Print
  maim ~/media/pics/shots/$(date +%Y-%m-%d_%H%M-%S).png & screenshot_not.sh

# take screenshot of selection with maim (macOS keybind)
shift + Print
  maim --delay=1.0 -s ~/media/pics/shots/$(date +%Y-%m-%d_%H%M-%S).png & screenshot_not.sh

# take fullscreen screenshot with maim (macOS keybind)
ctrl + 4
  maim ~/media/pics/shots/$(date +%Y-%m-%d_%H%M-%S).png & screenshot_not.sh

# take screenshot of selection with maim (macOS keybind)
shift + ctrl + 4
  maim --delay=1.0 -s ~/media/pics/shots/$(date +%Y-%m-%d_%H%M-%S).png & screenshot_not.sh


# decrease/increase transparency
super + alt + {j, k}
  picom-trans -c {-5, +5} 

# execute test script
super + alt + t
  notify-send test
